<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_chosen"
    tools:context=".DoingActivity">

    <TextView
        android:id="@+id/do_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:layout_marginBottom="8dp"
        android:text="Task Title"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:layout_centerHorizontal="true"
        app:fontFamily="@font/montserrat_bold"
        />

    <TextView
        android:id="@+id/do_taskee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="8dp"
        android:text="Taskee"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/do_title"
        app:fontFamily="@font/montserrat_bold"/>

    <TextView
        android:id="@+id/do_dateNeeded"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="5dp"
        android:layout_marginBottom="8dp"
        android:layout_toRightOf="@id/dummyViewY1"
        android:text="Date needed"
        android:textColor="#FFFFFF"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/do_taskee"
        app:fontFamily="@font/montserrat" />

    <TextView
        android:id="@+id/do_dateNeeded2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/do_taskee"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="5sp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="8dp"
        android:layout_toLeftOf="@id/dummyViewY1"
        android:text="Date needed:"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        app:fontFamily="@font/montserrat_bold" />

    <TextView
        android:id="@+id/do_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="5dp"
        android:layout_marginBottom="8dp"
        android:layout_toRightOf="@id/dummyViewY2"
        android:text="Payment"
        android:textColor="#FFFFFF"
        android:layout_below="@id/do_dateNeeded"
        android:layout_centerHorizontal="true"
        app:fontFamily="@font/montserrat"/>

    <TextView
        android:id="@+id/do_amount2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/do_dateNeeded"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="8dp"
        android:layout_toLeftOf="@id/dummyViewY2"
        android:text="Payment:"
        android:textColor="#FFFFFF"
        app:fontFamily="@font/montserrat_bold" />

    <TextView
        android:id="@+id/bidVie_desc"
        android:layout_width="180dp"
        android:layout_height="80dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="5dp"
        android:layout_toRightOf="@id/dummyViewY3"
        android:text="Description"
        android:textColor="#FFFFFF"
        android:inputType="textMultiLine"
        android:lines="5"
        android:minLines="1"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/do_amount"
        app:fontFamily="@font/montserrat"/>

    <TextView
        android:id="@+id/bidVie_desc3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/do_amount"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="8dp"
        android:layout_toLeftOf="@id/dummyViewY3"
        android:inputType="textMultiLine"
        android:lines="5"
        android:minLines="1"
        android:text="Description:"
        android:textColor="#FFFFFF"
        app:fontFamily="@font/montserrat_bold" />

    <Button
        android:id="@+id/complete_btn"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/btn_bg"
        android:text="Complete Task"
        android:textColor="#FFFFFF"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/bidVie_desc"
        app:fontFamily="@font/montserrat_bold"/>

    <TextView
        android:id="@+id/dummyViewY1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/do_taskee"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/dummyViewY2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/dummyViewY1"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/dummyViewY3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/dummyViewY2"
        android:layout_centerHorizontal="true" />

</RelativeLayout>